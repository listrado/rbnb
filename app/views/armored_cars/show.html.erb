<div class="container my-5 py-5 z-depth-1">


  <!--Section: Content-->
  <section class="px-md-5 mx-md-5 text-center text-lg-left dark-grey-text">

    <!--Grid row-->
    <div class="row">

      <!--Grid column-->
      <div class="col-md-6 mb-4 mb-md-0">

        <!--Image-->
        <div class="view overlay z-depth-1-half">
          <% if @car.image %>
          <img class="img-fluid" src="<%= @car.image %>" alt="armored car">
          <% else %>
          <%= image_tag "default.png", class: "img-fluid" %>
          <% end %>
          <a href="#">
            <div class="mask rgba-white-light"></div>
          </a>
        </div>

      </div>
      <!--Grid column-->

      <!--Grid column-->
      <div class="col-md-6 mb-4 mb-md-0">

        <h3 class="font-weight-bold"><%= @car.model %></h3>

        <p class="text-muted"><%= @car.detailes %></p>

        <p class="text-muted"><%= @car.price_cents.to_d/100 %>$</p>

        <%= link_to 'Back', armored_cars_path, class: "btn btn-light btn-md ml-0"  %>
        <%= link_to new_armored_car_booking_path(@car), class: "btn btn-primary btn-md ml-0" do %>
        Book <i class="fa fa-book ml-2"></i>
        <% end %>


      </div>
      <!--Grid column-->

    </div>
    <!--Grid row-->


  </section>
  <!--Section: Content-->


</div>